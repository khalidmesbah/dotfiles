# change the keyboard layout -> by khalid mesbah
super + space 
  ~/scripts/toggleKbd.sh
F7
  ~/scripts/toggleKbd.sh
alt + Tab
  notify-send "alt+tab"
XF86AudioRaiseVolume
  ~/scripts/volumeIndicator.sh "up"
XF86AudioLowerVolume
  ~/scripts/volumeIndicator.sh "down"
XF86AudioMute
  ~/scripts/volumeIndicator.sh "mute"

