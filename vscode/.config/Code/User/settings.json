{
  // system: editor
  "editor.formatOnSaveMode": "modifications",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.guides.bracketPairs": "active",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "editor.fontSize": 14,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  "editor.fontFamily": "CaskaydiaCove Nerd Font, Fira Code,'Droid Sans :Mono', 'monospace', monospace",
  "editor.fontWeight": "normal",
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",
  "editor.renderWhitespace": "none",
  "editor.lineNumbers": "on",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.minimap.enabled": false,
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabSize": 2,
  "editor.autoClosingBrackets": "always",
  "editor.autoSurround": "languageDefined",
  // system: terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "monospace",
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "st",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.customGlyphs": false,
  "terminal.integrated.defaultProfile.linux": "bash",
  "debug.terminal.clearBeforeReusing": true,
  // system: files
  "files.autoSave": "afterDelay",
  // system: workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.statusBar.visible": true,
  "workbench.settings.editor": "json",
  // system: window
  "window.menuBarVisibility": "toggle",
  // system: explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // prettier
  "prettier.semi": false,
  // code runner
  "code-runner.executorMap": {
    "python": "/usr/bin/python3"
  },
  "code-runner.runInTerminal": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.ignoreSelection": true,
  "code-runner.saveFileBeforeRun": true,
  // emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "workbench.editorAssociations": {
    "*.pdf": "pdf.preview"
  },
  "git.openRepositoryInParentFolders": "never",
  // vim
  "vim.foldfix": true,
  "vim.highlightedyank.color": "rgba(90, 255, 89, 0.7)",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "white",
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["leader", "W"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["leader", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["leader", "w"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader", "x"],
      "commands": [":x!"]
    },
    {
      "after": ["g", "g", "V", "G"],
      "before": ["<c-a>"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "after": ["^"],
      "before": ["H"]
    },
    {
      "after": ["$"],
      "before": ["L"]
    }
  ],
  "vim.handleKeys": {
    "<C-w>": false,
    "<C-o>": false,
    "<C-k>": false,
    "<C-f>": false,
    "<C-t>": false,
    "<C-j>": false,
    "<C-c>": false,
    "<C-n>": false,
    "<C-s>": false,
    "<C-x>": false,
    "<C-a>": false,
    "<C-p>": false
  },
  // markdown
  "markdown-preview-enhanced.mermaidTheme": "dark",
  "markdown-preview-enhanced.Domain": "http://///the",
  "markdown-preview-enhanced.revealjsTheme": "black.css",
  // live server
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  // eslint
  "css.lint.unknownAtRules": "ignore",
  // front matter
  "frontMatter.content.autoUpdateDate": true,
  "frontMatter.content.snippets": {},
  "frontMatter.preview.host": "http://localhost:3000",
  "frontMatter.sponsors.ai.enabled": true,
  "frontMatter.taxonomy.dateFormat": "yyyy-MM-dd",
  "frontMatter.taxonomy.frontMatterType": "JSON",
  // project manager
  "projectManager.git.baseFolders": ["$home/repos"],
  "projectManager.sortList": "Recent",
  // english word hint
  "files.associations": {
    "*.mdx": "markdown"
  },
  // cspell
  "cSpell.userWords": [
    "akar",
    "algoad",
    "Aljoad",
    "Avenir",
    "Azkar",
    "BITRATES",
    "blazingly",
    "Blogy",
    "Caskaydia",
    "chakra",
    "codepen",
    "contentlayer",
    "datetime",
    "dhikr",
    "Dhikrs",
    "disptach",
    "Divs",
    "draggables",
    "easymotion",
    "Elzero",
    "fileupload",
    "foldfix",
    "formkit",
    "gaber",
    "highlightedyank",
    "hlsearch",
    "iconify",
    "incsearch",
    "Invision",
    "journaling",
    "Kanban",
    "khaled",
    "Leetcode",
    "Liskov",
    "Mesbah",
    "mongosh",
    "Nuxt",
    "openai",
    "organise",
    "Parens",
    "practise",
    "Proptypes",
    "reduxjs",
    "rehype",
    "resizer",
    "rgba",
    "sebaq",
    "STORYBLOK",
    "Supa",
    "Surahs",
    "Swal",
    "sweetalert",
    "tafseer",
    "tailwindcss",
    "Tajawal",
    "ticktick",
    "todos",
    "transpiles",
    "transpiling",
    "Traversy",
    "Udacity",
    "vmin",
    "whiteboarded",
    "whiteboarding",
    "الجزء"
  ],
  "[cpp]": {
    "editor.defaultFormatter": "ms-vsliveshare.vsliveshare"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "window.zoomLevel": 2,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.formatting.provider": "none",
  "[latex]": {

    "editor.formatOnPaste": false,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.defaultFormatter": "mathematic.vscode-latex"
  },
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "C_Cpp.default.compilerPath": "/usr/bin/clang",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "C_Cpp.intelliSenseEngine": "disabled"
}
