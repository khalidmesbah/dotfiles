# night mode
nm() {
	local VALUE=$1
	echo $VALUE
	if ([ $VALUE = "g" ]); then
		redshift -P -O 1000
	elif ([ $VALUE = "l" ]); then
		redshift -P -O 5000
	else
		redshift -P -O 2500
	fi

}

