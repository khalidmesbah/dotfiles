# kill a server
kill() {
	sudo kill -9 $(sudo lsof -t -i:$1)
}

function pkill() {
    echo "COMMAND | PID %CPU %MEM"
    ps aux | awk 'NR>1 {print $11 " | " $2, $3, $4}' | fzf --height 40% --layout=reverse --prompt="Select process to kill: " | awk -F'|' '{print $2}' | xargs -r sudo kill
}

